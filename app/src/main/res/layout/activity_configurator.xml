<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configuratorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfiguratorActivity">

    <!-- Fixed Preview at top -->
    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/configurator_preview"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorPrimary" />

            <com.panda.karsu_badge.BadgeView
                android:id="@+id/badgePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:badgeType="oneText"
                app:badgeText1="Preview"
                app:badgeColor="#006A6A"
                app:badgeTextSize="14sp"
                app:badgeCornerRadius="4dp"
                app:badgePaddingLeft="6dp"
                app:badgePaddingTop="4dp"
                app:badgePaddingRight="6dp"
                app:badgePaddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/configurator_spannable_preview"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvSpannablePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Controls -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Badge Type -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configurator_badge_type"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="?attr/colorPrimary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilBadgeType"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerBadgeType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Text Inputs -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNumber"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/configurator_number"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilText1"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/configurator_text1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Preview" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilText2"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/configurator_text2"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Colors -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configurator_colors"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="?attr/colorPrimary" />

                    <!-- Badge Color -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configurator_badge_color"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:layout_marginTop="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorTeal"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#006A6A"
                                app:backgroundTint="#006A6A" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorRed"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#CC3333"
                                app:backgroundTint="#CC3333" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorBlue"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#2196F3"
                                app:backgroundTint="#2196F3" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorGreen"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#4CAF50"
                                app:backgroundTint="#4CAF50" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorOrange"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#FF9800"
                                app:backgroundTint="#FF9800" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorPurple"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#9C27B0"
                                app:backgroundTint="#9C27B0" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorPink"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#E91E63"
                                app:backgroundTint="#E91E63" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBadgeColorBlack"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#222222"
                                app:backgroundTint="#222222" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Text Color -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configurator_text_color"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:layout_marginTop="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTextColorWhite"
                                style="@style/Widget.Material3.Button.IconButton.Outlined"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#FFFFFF" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTextColorBlack"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#000000"
                                app:backgroundTint="#222222" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTextColorYellow"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#FFD700"
                                app:backgroundTint="#FFD700" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTextColorCyan"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                app:icon="@drawable/ic_circle"
                                app:iconTint="#00BCD4"
                                app:backgroundTint="#00BCD4" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dimensions (Sliders) -->
            <com.google.android.material.card.MaterialCardView
                style="?attr/materialCardViewElevatedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configurator_dimensions"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="?attr/colorPrimary" />

                    <!-- Text Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/configurator_text_size"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/tvTextSizeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14sp"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorPrimary" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderTextSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="8"
                        android:valueTo="32"
                        android:stepSize="1"
                        android:value="14" />

                    <!-- Corner Radius -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/configurator_corner_radius"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/tvCornerRadiusValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4dp"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorPrimary" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderCornerRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="24"
                        android:stepSize="1"
                        android:value="4" />

                    <!-- Padding -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/configurator_padding"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/tvPaddingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4dp"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorPrimary" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="16"
                        android:stepSize="1"
                        android:value="4" />

                    <!-- Center Padding -->
                    <LinearLayout
                        android:id="@+id/layoutPaddingCenter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/configurator_padding_center"
                                android:textAppearance="?attr/textAppearanceLabelMedium" />

                            <TextView
                                android:id="@+id/tvPaddingCenterValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6dp"
                                android:textAppearance="?attr/textAppearanceLabelMedium"
                                android:textColor="?attr/colorPrimary" />
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderPaddingCenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0"
                            android:valueTo="16"
                            android:stepSize="1"
                            android:value="6" />
                    </LinearLayout>

                    <!-- Stroke Width -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/configurator_stroke_width"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/tvStrokeWidthValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1dp"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorPrimary" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderStrokeWidth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="6"
                        android:stepSize="1"
                        android:value="1" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
